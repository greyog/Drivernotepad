<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8pt"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvOdometerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:textSize="18sp"
        android:text="@string/odometerLabel" />

    <EditText
        android:id="@+id/entryOdometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_row="0"
        android:layout_column="1"
        android:text="000000"
        android:selectAllOnFocus="true"/>

    <TextView
        android:id="@+id/txAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:textSize="18sp"
        android:text="@string/amountLabel" />

    <EditText
        android:id="@+id/entryAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:selectAllOnFocus="true"/>

    <TextView
        android:id="@+id/tvListEntryFuelType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:textSize="18sp"
        android:layout_row="2"
        android:text="@string/priceLabel" />

    <EditText
        android:id="@+id/entryPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:selectAllOnFocus="true"/>

    <TextView
        android:id="@+id/tvTotalPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:textSize="18sp"
        android:layout_row="3"
        android:text="@string/totalPriceLabel" />

    <EditText
        android:id="@+id/entryTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:ems="10"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:text="0"/>

    <Button
        android:id="@+id/entryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/entryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        android:textSize="18sp" />


</GridLayout>